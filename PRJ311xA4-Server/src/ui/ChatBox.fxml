<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="controller.ChatBoxController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" vgap="5" hgap="5">
    <padding>
        <Insets top="5" left="5" bottom="5" right="5" />
    </padding>
    <children>
        <TextArea fx:id="txtContent"
                  GridPane.columnSpan="2" prefHeight="250"/>

        <TextField fx:id="txtMessage" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="350"/>
        <Button fx:id="btnSend" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="130"
                text="Send" onAction="#send"/>
    </children>
</GridPane>
